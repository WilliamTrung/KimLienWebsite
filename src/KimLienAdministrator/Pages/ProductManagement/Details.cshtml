@page
@model KimLienAdministrator.Pages.ProductManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-4">
            <a class="btn btn-secondary fs-5" asp-page="./Index">Về danh sách</a>
        </div>
    </div>
</div>
<div class="container bg-light">
    <div class="row">
        <div class="col-md-6">
            <div class="col-12">
                <div id="slider" class="owl-carousel product-slider p-3 ps-1">
                    @*<img class="product_detail_main_image" src="@Model.Product.Product.DeserializedPictures.First()" alt="@Model.Product.Product.Name">*@
                    @foreach (var item in Model.Product.Product.DeserializedPictures)
                    {
                        <div class="item">
                            @*<div class="product_detail_sub_image">*@
                            <img class="w-100 h-auto" src="@item">
                            @*</div>*@
                        </div>
                    }
                </div>
                <div class="col-12">
                    <div id="thumb" class="owl-carousel product-thumb p-3">
                        @*<div class="product_detail_sub_gallery">*@
                        @*<div class="item">
                        <img src="@Model.Product.Product.DeserializedPictures.First()" alt="@Model.Product.Product.Name">
                        </div>*@
                        @foreach (var item in Model.Product.Product.DeserializedPictures)
                        {
                            <div class="item">
                                @*<div class="product_detail_sub_image">*@
                                <img src="@item">
                                @*</div>*@
                            </div>
                        }
                        @*</div>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-sm-12 p-3">
            <div class="row h-100">
                <div class="col-12 align-self-start">
                    <div class="col-12 fs-4 fw-bold">
                        <p>
                            @Model.Product.Product.Name
                        </p>
                    </div>
                    <div class="col-12">
                        <div class="text-break fs-5">
                            @Html.Raw(@Model.Product.Product.Description)
                        </div>
                    </div>
                </div>
                <div class="col-12 align-self-end">
                    <h4>Các loại hàng sản phẩm nằm trong: </h4>
                    <div class="">
                        @foreach (var item in Model.Product.ProductCategories)
                        {
                            <label class="border border-dark p-1 m-1 rounded fs-5">
                                @item.Category.Name
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
<div class="container text-end">
    <div class="row">
        <div class="col-10">

        </div>
        <div class="col-2">
            <a class="text- btn btn-primary fs-5" asp-page="./Edit" asp-route-id="@Model.Product.Product.Id">Chỉnh Sửa</a>
        </div>
    </div>
</div>