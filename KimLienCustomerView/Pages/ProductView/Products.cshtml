@page
@model KimLienCustomerView.Pages.ProductView.ProductsModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
@foreach(var item in Model.Products){
    <div class="col-md-4 col-xs-6 border-primary mb-3">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @item.Product.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="@item.Product.DeserializedPictures[0]" width="100%" alt="@item.Product.Name">
                </div>
            </div>
        </div>
    </div>
}
