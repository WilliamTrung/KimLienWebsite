@page 
@using System.Text
@model KimLienCustomerView.Pages.ProductView.ProductList
@{
    ViewData["Title"] = "ProductList";
}

@if (Model.Products.Count <= 0)
{
    <div class="bg-light rounded-3 text-center my-3 pb-3 opacity-75 pb-4">
        @if (ViewData["Category"] != null)
        {
            <p class="h1 text-center pt-3 fw-bold" style="font-family: 'Alegreya', serif; font-weight: 600px">@ViewData["Category"]</p>
        }
        <p class="h1">Không có sản phẩm nào!</p>
    </div>
    
}
else
{
    <div class="container bg-light bg-opacity-50 rounded-3 my-3">
        @if(ViewData["Category"] != null)
        {
            <p class="h1 text-center pt-3 fw-bold" style="font-family: 'Alegreya', serif; font-weight: 600px">@ViewData["Category"]</p>
        }
        <div class="row">
            @foreach (var item in Model.Products.Take(12))
            {
                <div class="col-xl-4 col-sm-6 col-md-6 my-2">
                <a asp-page="./ProductDetail" asp-route-id="@item.Product.Id">
                    <div class="d-flex border border-4 border-bottom-0 bg-light justify-content-center rounded-top">
                        <img class="d-block rounded-3 mw-100 img-200 transform-15" src="@item.Product.DeserializedPictures.FirstOrDefault()" alt="@item.Product.Name">
                    </div>
                    <div class="p-2 text-black text-center border border-4 border-top-0 rounded-bottom" style="background-color: #0099CC;">
                        <p class="h5 text-decoration-none">
                            @item.Product.Name
                        </p>
                    </div>

                </a>
            </div>
            }
        </div>
    </div>
    <nav class="ms-2">
        <form method="post">
            <ul class="pagination">
                @if (Model.PageIndex != 0)
                {
                    <li class="page-item">
                        <button class="page-link" value="@Model.PageIndex - 1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </button>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <button class="page-link" value="@Model.PageIndex - 1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </button>
                    </li>
                }

                @for (int i = 1; i <= @Model.MaxPages; i++)
                {
                    @if (Model.PageIndex == (i - 1))
                    {
                        <li class="page-item active">
                            <button name="index" class="page-link" value="@(i-1)" aria-label="@i">
                                <span class="sr-only">@i</span>
                            </button>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <button name="index" class="page-link" value="@(i-1)" aria-label="@i">
                                <span class="sr-only">@i</span>
                            </button>
                        </li>
                    }

                }
                @if (Model.PageIndex == Model.MaxPages - 1)
                {
                    <li class="page-item disabled">

                        <button class="page-link disabled" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </button>
                    </li>
                }
                else
                {
                    <li class="page-item">

                        <button class="page-link disabled" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </button>
                    </li>
                }
            </ul>
        </form>

    </nav>
}