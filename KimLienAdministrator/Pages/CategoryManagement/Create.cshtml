@page
@model KimLienAdministrator.Pages.CategoryManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo Thể Loại</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:30px;">
                <label class="fs-5">Thể Loại Chính</label>
                <select class="form-select fs-5" name="CategoryId" asp-items="Model.MainCategories"></select>
            </div>
            <div class="form-group" style="margin-bottom:30px;">
                <label class="fs-5" asp-for="Category.Name" class="control-label">Tên</label>
                <input asp-for="Category.Name" class="form-control fs-5" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom:15px;">
                <input type="submit" value="Create" class="btn btn-primary fs-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">
       <h5>Về danh sách</h5>
        </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
