@page
@model KimLienAdministrator.Pages.CategoryManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Thể Loại</h1>

<p>
    <a asp-page="Create">
        <p class="btn btn-primary fs-5">Tạo Loại sản phẩm</p>
    </a>
</p>
<div class="d-flex justify-content-center my-3 mx-auto">
    <div class="w-25">
        <form method="get" class="sticky-top">
            <div class="input-group rounded">
                <input name="name" type="search" class="form-control rounded h-100" placeholder="Tìm kiếm" aria-label="Search" aria-describedby="search-addon" />
                <button class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>

</div>
<div class="container">
    <div class="col-12">
        <p class="text-start h3">Loại sản phẩm </p>
    </div>
    @foreach (var item in Model.Category.Where(c => c.ParentId == null))
    {
        <form method="post" class="row justify-content-around my-1">
            <div class="col-1 offset-lg-3 offset-md-1 offset-sm-0 align-self-baseline">

                <div class="btn center offset-8 col-4">
                    @if (Model.Category.Any(c => c.ParentId == item.Id))
                    {
                        <svg onclick="onCategoryExpand('@item.Id')" class="rotate d-block mt-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                            <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
                        </svg>
                    }
                </div>
            </div>
            <div class="col-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input name="id" type="hidden" value="@item.Id" />
                <input name="name" asp-for="@item.Name" class="fs-5 w-100 rounded-start h-100" />
                @if (item.Id == Model.Message.Id)
                {
                    <span value="@Model.Message.Message" class="text-danger"></span>
                }
            </div>
            <div class="col-4">
                <button class="btn btn-primary fs-6" name="action" value="update" onclick="return confirm('Bạn chắc muốn cập nhật?');">Cập Nhật</button>
                <button class="btn btn-danger fs-6" name="action" value="delete" onclick="return confirm('Bạn chắc muốn xóa?');">Xóa</button>
            </div>
        </form>
        <div class="@item.Id hidden" style="">
            @foreach (var childItem in Model.Category.Where(c => c.ParentId == item.Id))
            {

                <form method="post" class="row justify-content-around my-1">
                    <div class="col-1  offset-lg-3 offset-md-1 offset-sm-0">
                    </div>
                    <div class="col-4">
                        <div class="col-11 offset-1 border-start ps-4 border-2 border-dark h-100">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input name="id" type="hidden" value="@childItem.Id" />
                            <input name="name" asp-for="@childItem.Name" class="fs-5 w-100 rounded-start h-100" />
                            @if (childItem.Id == Model.Message.Id)
                            {
                                <span value="@Model.Message.Message" class="text-danger"></span>
                            }
                        </div>

                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary fs-6" name="action" value="update" onclick="return confirm('Bạn chắc muốn cập nhật?');">Cập Nhật</button>
                        <button class="btn btn-danger fs-6" name="action" value="delete" onclick="return confirm('Bạn chắc muốn xóa?');">Xóa</button>
                    </div>
                </form>
            }
        </div>
    }
</div>