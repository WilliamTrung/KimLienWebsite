@page
@model KimLienAdministrator.Pages.CategoryManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
    <form method="post">
        <tr>
            <td>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input name="id" type="hidden" value="@item.Id"/>
                        <input name="name" asp-for="@item.Name" class="form-control" />
                        @if(item.Parent != null)
                        {
                            <span>@item.Parent.Name</span>
                            
                        }
                        @if(item.Id == Model.Message.Id){
                            <span value="@Model.Message.Message" class="text-danger"></span>
                        }
                    </div>
                        
                    
            </td>
            <td>
                <button name="action" value="update" onclick="return confirm('Are you sure you want to update?');">Update</button>
                <button name="action" value="delete" onclick="return confirm('Are you sure you want to delete?');">Delete</button>
            </td>
        </tr>
    </form>
        
}
    </tbody>
</table>
