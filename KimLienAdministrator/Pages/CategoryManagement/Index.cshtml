@page
@model KimLienAdministrator.Pages.CategoryManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Thể Loại</h1>

<p>
    <a asp-page="Create">
        <p class="btn btn-primary fs-5">Tạo Thể Loại</p>
    </a>
</p>
@*Table for Parent Categories*@
<table class="table m-auto" style="width: 60% !important">
    <thead class="bg-info bg-opacity-50">
        <tr>
            <th class="col-md-5 fs-4">
                Tên
            </th>
            <th class="col-2">
            </th >
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            @if (item.Parent == null)
            {

                <tr>
                    <form method="post">
                    <td style="border-right: 1px ridge #000">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input name="id" type="hidden" value="@item.Id" />
                            <input name="name" asp-for="@item.Name" class="form-control fs-5" />
                                @if (item.Id == Model.Message.Id)
                                {
                                <span value="@Model.Message.Message" class="text-danger"></span>
                                }
                        </div>

                    </td>
                    <td >
                        <button class="btn btn-primary fs-6 mt-1" name="action" value="update" onclick="return confirm('Bạn chắc muốn cập nhật?');">Cập Nhật</button>
                        <button class="btn btn-danger fs-6 mt-1" name="action" value="delete" onclick="return confirm('Bạn chắc muốn xóa?');">Xóa</button>
                    </td>
                    </form>
                </tr>

            }
            @foreach (var childItem in Model.Category)
            {
                @if (childItem.ParentId.Equals(item.Id))
                {

                    <tr class="child-row">
                        <form method="post">
                        <td style="border-right: 1px ridge #000">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group-child">
                                <input name="id" type="hidden" value="@childItem.Id" />
                                <input name="name" asp-for="@childItem.Name" class="form-control fs-5" />
                                    @if (childItem.Id == Model.Message.Id)
                                    {
                                    <span value="@Model.Message.Message" class="text-danger"></span>
                                    }

                            </div>
                        </td>
                        <td>
                            <button class="btn btn-primary fs-6 mt-1" name="action" value="update" onclick="return confirm('Bạn chắc muốn cập nhật?');">Cập Nhật</button>
                            <button class="btn btn-danger fs-6 mt-1" name="action" value="delete" onclick="return confirm('Bạn chắc muốn xóa?');">Xóa</button>
                        </td>
                        </form>
                    </tr>
                }
            }
        }
    </tbody>
</table>
