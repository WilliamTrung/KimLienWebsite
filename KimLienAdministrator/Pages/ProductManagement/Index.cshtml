@page
@model KimLienAdministrator.Pages.ProductManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-uppercase">Danh sách Sản Phẩm</h1>

<p>
    <a asp-page="Create">
        <p class="btn btn-primary fs-5">Tạo sản phẩm</p>
    </a>
</p>
<table class="table border-dark" style="background-color: #f4e2ab;)">
    <thead class="bg-info bg-opacity-50">
        <tr>
            <th class="fs-4 col-1 border-end border-dark text-center">
                Tên
            </th>
            <th class="fs-4 col-2 border-end border-dark text-center">
                Chi tiết mô tả
            </th>
            <th class="fs-4 col-2 border-end border-dark text-center">
                Hình Ảnh
            </th>
            <th class="fs-4 col-1 border-end border-dark text-center">
                Đã Xóa
            </th>
            <th class="fs-4 col-2 border-end border-dark text-center">
                Thời gian cập nhật
            </th>
            <th class="col-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr >
                <td class="fs-5 border-end border-dark fw-bold">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="fs-5 border-end border-dark">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="fs-5 border-end border-dark">
                    <img class="h-auto" src="@item.DeserializedPictures.First()">
                </td>
                @if (item.IsDeleted == false)
                {
                    <td class="border-end border-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                        </svg>
                    </td>
                }
                else
                {
                    <td class="border-end border-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                            <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z" />
                        </svg>
                    </td>
                }
                <td class="fs-5 border-end border-dark">
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td class="btn-edit">
                    <a class="btn btn-primary w-100 mb-3" asp-page="./Edit" asp-route-id="@item.Id">Chỉnh sửa</a>
                    <br>
                    <a class="btn btn-info w-100" asp-page="./Details" asp-route-id="@item.Id">Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>