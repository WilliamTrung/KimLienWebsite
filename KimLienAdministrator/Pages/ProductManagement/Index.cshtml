@page
@model KimLienAdministrator.Pages.ProductManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Product Index</h1>

<p>
    <a asp-page="Create">
        <h3>Create New Product</h3>
        </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Pictures)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td class="table-border" style="border-left:1px ridge #000">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="table-border">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="table-border">
                <img src="@item.DeserializedPictures.First()">
            </td>
            <td class="table-border">
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td class="table-border">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td class="table-border">
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td class="table-border">
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>|
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>|
            </td>
        </tr>
}
    </tbody>
</table>
