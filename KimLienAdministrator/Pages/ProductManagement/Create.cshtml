@page
@model KimLienAdministrator.Pages.ProductManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-uppercase">Tạo Sản Phẩm</h1>
<hr />
@if (Model.Messages.Count > 0)
{
    foreach (var message in Model.Messages)
    {
        <p class="alert-danger">@message</p>
    }
}
<div class="row">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group mb-3">
            <label class="fs-5" asp-for="Name" class="control-label">Tên</label>
            <input asp-for="Name" class="form-control fs-5" />
        </div>
        <div class="form-group mb-3">
            <label class="fs-5" asp-for="Description" class="control-label">Chi Tiết Mô Tả</label>
            @*<input asp-for="Description" class="form-control" />*@
            <textarea class="" cols="20" rows="5" asp-for="Description"></textarea>
            </div>
        <div class="form-group mb-3">
            <p class="fs-5 mb-0">Thể Loại Chính</p>
            <select asp-for="MainSelectedCategories" class="form-control fs-5" multiple="multiple" asp-items="Model.MainCategories"></select>
            <button name="action" value="@Model.ACTION_CATEGORY_SELECT" class="btn btn-info fs-5">Chọn Thể Loại Phụ</button>
        </div>
        <div class="form-check-group">
            @if (Model.SubCategories != null && Model.SubCategories.Count() > 0)
            {
                @foreach (var sub in Model.SubCategories)
                {
                    <label>@sub.Key</label>
                    <select asp-for="SubSelectedCategories" class="form-control fs-5" multiple="multiple" asp-items="sub.Value"></select>
                }
            }
        </div>
        <div class="form-group mb-3">
            <label class="name-label" asp-for="Files" class="control-label fs-5">File Hình Ảnh</label>
            <input id="img-selector" asp-for="Files" class="form-control fs-5" />
            <div id="preview"></div>
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Tạo" class="btn btn-primary fs-5" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index"><p class="btn btn-secondary fs-5">Về danh sách</p></a>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.3.1/tinymce.min.js"></script>
<script type="text/javascript">
    tinymce.init({
        selector: 'textarea',
        max_height: 600,
        max_width: 600,
        min_height: 200,
        min_width: 400,
        content_style: "body {font-size: 15pt;}",
    });
</script>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

